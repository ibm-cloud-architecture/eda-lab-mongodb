{
  "name": "camel-mongodb-kafka-connector",
  "config":
  {
      "connector.class": "org.apache.camel.kafkaconnector.mongodb.CamelMongodbSinkConnector",
      "tasks.max": "1",
      "topics": "items",

      "key.converter": "org.apache.kafka.connect.storage.StringConverter",
      "key.converter.schemas.enable": false,
      "value.converter.schemas.enable": false,
      "value.converter": "org.apache.kafka.connect.json.JsonConverter",
      "camel.sink.path.connectionBean": "mongodb:com.mongodb.client.MongoClients#create(mongo:27017)?database=itemdb&collection=items&operation=insert"
  }
}